<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="final.RegisterPage"
             Title="Kayıt Ol">

    <StackLayout Padding="20" Spacing="10">
    
        <Entry x:Name="registerUsernameEntry" Placeholder="Kullanıcı Adı" />

    
        <Entry x:Name="registerPasswordEntry" Placeholder="Şifre" IsPassword="True" />

      
        <Button Text="Kayıt Ol" Clicked="OnRegisterClicked" BackgroundColor="DarkBlue" />
    </StackLayout>
</ContentPage>
