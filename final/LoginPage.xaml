<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="final.LoginPage"
             Title="Giriş Yap">

    <StackLayout Padding="20" Spacing="10">
        
        <Entry x:Name="usernameEntry" Placeholder="Kullanıcı Adı" />

 
        <Entry x:Name="passwordEntry" Placeholder="Şifre" IsPassword="True" />

     
        <Button Text="Giriş Yap" Clicked="OnLoginClicked" BackgroundColor="DarkBlue" />

      
        <Label Text="Henüz bir hesabınız yok mu? Kaydolun." TextColor="Blue" HorizontalOptions="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnRegisterTapped" />
            </Label.GestureRecognizers>
        </Label>
    </StackLayout>
</ContentPage>
